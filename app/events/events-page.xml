<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
	
	<ActionBar>
  		<!--<NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="{{onNavBtnTap}}"/> -->
		<ActionItem icon="~/images/map.png" tap="{{getToMap}}" />
		<ActionItem icon="~/images/news.png" tap="{{ getToNews }}" />
		<ActionItem icon="~/images/add_friend.jpg" tap="{{ getToFriends }}" />
		<ActionItem icon="~/images/loupe.png" tap="{{ deconnexion }}" />
		<ActionItem icon="~/images/menu.jpg" tap="{{ getToMenu }}"/>
		<!-- <ActionItem text="Test" icon="~/images/menu.jpg" tap="{{onNavBtnTap}}" android.position="popup"></ActionItem> -->
	</ActionBar>
	<ScrollView>
	<FlexboxLayout class="page">
        <AbsoluteLayout class ="connexion-top">
        	<Label class="title" text="Événements" />
			<TextField id="confirmPassword" type="search" class="searchBar" text="{{ confirmPassword }}"
			hint="Événement" returnKeyType="done" />
		</AbsoluteLayout>

		<StackLayout orientation="vertical" width="100%" height="auto" margin-top="75px">
			<StackLayout orientation="horizontal" width="100%">
				<Image src="~/images/football.png" tap="{{getToTheEvent}}" width="50"/>
					<StackLayout orientation="vertical" width="70%" margin-top="75px">
						<Label class="GridCenter" tap="{{getToTheEvent}}" text="13 foulée parisienne"/>
						<label class="Bold" text="le 13 décembre 2019"/>
					</StackLayout>
				<Image src="~/images/deconnexion.png" height="50" width="50"/>
			</StackLayout>
			<StackLayout class="hr-dark m-5"></StackLayout>

			<StackLayout orientation="horizontal" width="100%">
				<Image src="~/images/football.png" width="50"/>
					<StackLayout orientation="vertical" width="70%" height="auto" margin-top="75px">
						<Label class="GridCenter" text="La date"/>
						<label class="Bold" text="Le titre"/>
					</StackLayout>
				<Image src="~/images/deconnexion.png" tap="deconnexion" height="50" width="50"/>
			</StackLayout>
			<StackLayout class="hr-dark m-5"></StackLayout>

			<StackLayout orientation="horizontal" width="100%">
				<Image src="~/images/football.png" tap="deconnexion" width="50"/>
					<StackLayout orientation="vertical" width="70%" height="auto" margin-top="75px">
						<Label class="GridCenter" text="La date"/>
						<label class="Bold" text="Le titre"/>
					</StackLayout>
				<Image src="~/images/deconnexion.png" tap="deconnexion" height="50" width="50"/>
			</StackLayout>
			<StackLayout class="hr-dark m-5"></StackLayout>

			<StackLayout orientation="horizontal" width="100%">
				<Image src="~/images/football.png" tap="deconnexion" width="50"/>
					<StackLayout orientation="vertical" width="70%" height="auto" margin-top="75px">
						<Label class="GridCenter" text="La date"/>
						<label class="Bold" text="Le titre"/>
					</StackLayout>
				<Image src="~/images/deconnexion.png" tap="deconnexion" height="50" width="50"/>
			</StackLayout>
			<StackLayout class="hr-dark m-5"></StackLayout>
		</StackLayout>

	</FlexboxLayout>
</ScrollView>
</Page>