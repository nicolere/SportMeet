		<ActionItem icon="~/images/map.png" tap="{{ getToMap}}" />
		<ActionItem icon="~/images/news.png" tap="{{ getToNews }}" />
		<ActionItem icon="~/images/add_friend.jpg"/>
		<ActionItem icon="~/images/loupe.png" tap="{{ deconnexion }}" />
		<ActionItem icon="~/images/menu.jpg" tap="{{ getToMenu }}"/>
