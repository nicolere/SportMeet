	<FlexboxLayout class="page">
        <AbsoluteLayout class ="connexion-top">
        	<Label class="title" text="Mes amis" />
			<TextField id="confirmPassword" type="search" class="searchBar" text="{{ confirmPassword }}"
			hint="Nom" returnKeyType="done" />
		</AbsoluteLayout>
		<GridLayout columns="auto, *" rows="auto, 25" class="center">
			<ListView items="{{friendList}}">
                <ListView.itemTemplate>
                    <label text="{{name}}" horizontalAlignment="left" verticalAlignment="center"/>
                </ListView.itemTemplate>
            </ListView>
		</GridLayout>

