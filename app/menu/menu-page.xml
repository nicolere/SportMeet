<Page loaded="pageLoaded" class="page" xmlns="http://www.nativescript.org/tns.xsd">
	<ActionBar>
  		<!--<NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="{{onNavBtnTap}}"/> -->
		<ActionItem icon="~/images/map.png" />
		<ActionItem icon="~/images/news.png" tap="{{ getToNews }}" />
		<ActionItem icon="~/images/add_friend.jpg" tap="{{ getToFriends }}" />
		<ActionItem icon="~/images/loupe.png" tap="{{ deconnexion }}" />
		<ActionItem icon="~/images/menu.jpg" />
		<!-- <ActionItem text="Test" icon="~/images/menu.jpg" tap="{{onNavBtnTap}}" android.position="popup"></ActionItem> -->
	</ActionBar>

	<FlexboxLayout class="page">
        <AbsoluteLayout class ="connexion-top">
        	<Label class="title" text="Paramètre" />
		</AbsoluteLayout>
            <GridLayout columns="65 , 5*" rows="31,31,31,31,31,31,31,31,31,31,31,31,31,31" visibility="{{ !isLoggingIn ? 'visible' : 'collapse' }}">
				<Image row="0" col="0" class="GridCenter" rowSpan="2" colSpan="1" height="100%" width="100%" src="~/images/profil.png"/>
				<label row="0" col="1" class="GridCenter" text="Modifier votre profil"/>
				<label row="1" col="1" class="GridCenter" text="{{name}}"/>

				<Image row="2" col="0" class="GridCenter" rowSpan="2" colSpan="1" height="100%" width="100%" src="~/images/groupe.png"/>
				<label row="2" col="1" class="textCenter" rowSpan="2" text="Groupe"/>

				<Image row="4" col="0" class="GridCenter" rowSpan="2" colSpan="1" height="100%" width="100%" src="~/images/events.png"/>
				<label row="4" col="1" class="textCenter" rowSpan="2" text="Événements"/>

				<Image row="6" col="0" class="GridCenter" rowSpan="2" colSpan="1" height="100%" width="100%" src="~/images/add_friend.png"/>
				<label row="6" col="1" class="textCenter" rowSpan="2" text="Retrouver des amis"/>

				<Image row="8" col="0" class="GridCenter" rowSpan="2" colSpan="1" height="100%" width="100%" src="~/images/paramètres.png"/>
				<label row="8" col="1" class="textCenter" rowSpan="2" text="Paramètres de l'application"/>

				<Image row="10" col="0" class="GridCenter" rowSpan="2" colSpan="1" height="100%" width="100%" src="~/images/interrogation.png"/>
				<label row="10" col="1" class="textCenter" rowSpan="2" text="Aide et assistance"/>

				<Image row="12" col="0" class="GridCenter" rowSpan="2" colSpan="1" height="100%" width="100%" src="~/images/deconnexion.png"/>
				<label row="12" col="1" class="textCenter" rowSpan="2" text="Déconnexion"/>

        	</GridLayout>
	</FlexboxLayout>
</Page>